use crate::ast::*;
grammar;

pub CommandList: CommandList = {
    <cp:Command*> => CommandList(cp)
}

Command: Command = {
    <t:Ident> "::" "RemoveColumn" "(" <c:Ident> ")" =>
        Command{table: t, action: CommandAction::RemoveColumn {col: c}}
}
